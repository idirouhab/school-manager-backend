{
  "openapi": "3.0.0",
  "info": {
    "title": "Tinaptic API",
    "version": "1.0.0",
    "description": "Exam manager",
    "termsOfService": "https://tinaptic.com",
    "contact": {
      "email": "iouhab@tinaptic.com",
      "name": "Idir Ouhab Meskine"
    }
  },
  "paths": {
    "/login": {
      "get": {
        "description": "Login to the application",
        "parameters": [
        {
          "name": "username",
          "schema": {
            "type": "string",
            "example": "myuser@bar.com"
          },
          "in": "query",
          "required": true
        },
        {
          "name": "password",
          "schema": {
            "type": "string",
            "example": "my-secret-password"
          },
          "in": "query",
          "required": true
        }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "tags": [
          "login"
        ]
      },
      "post": {
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "name": {
                    "type": "string"
                  },
                  "lastName": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        },
        "tags": [
          "login"
        ]
      }
    },
    "/login/confirmation/{token}": {
      "get": {
        "description": "Confirm user to",
        "tags": [
          "login"
        ],
        "parameters": [
        {
          "name": "token",
          "schema": {
            "type": "string"
          },
          "description": "User verification token.",
          "in": "path",
          "required": true
        }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  }
}